{% extends 'templates/app.twig' %}

{% block title %}home{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12 col-sm-12">
			<div class="dropdown">
				<button class="btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown">Select Category <span><i class="fa fa-caret-down" aria-hidden="true"></i></span></button>
				<ul class="dropdown-menu">
					{% for category in categories %}
				    	<li>
				    		<a href="{{ path_for('category.get', {category: category.category}) }}">
				    			{{ category.category }}
				    		</a>
				    	</li>
			    	{% endfor %}
			    </ul>
			</div>
		</div>
	</div>
	<hr>
	<div class="row">
		{% for index, product in products %}
			{% if product.custom == 0 %}
				<div class="col-lg-3 col-md-3 col-sm-6">
					{% include 'products/partials/item.twig' with {product: product} %}
				</div>
				{% if (index+1)%4 == 0 %}
					</div>
					<div class="row">
				{% endif %}
			{% endif %}	
		{% endfor %}	
	</div>
{% endblock %}