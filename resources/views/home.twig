{% extends 'templates/app.twig' %}

{% block title %}home{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-12 col-sm-12">
			<div class="dropdown">
				<button class="btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown">Select Category <span><i class="fa fa-caret-down" aria-hidden="true"></i></span></button>
				<ul class="dropdown-menu">
					{% for category in categories %}
				    	{% include 'products/partials/dropdown.twig' with {category: category} %}
			    	{% endfor %}
			    </ul>
			</div>
		</div>
	</div>
	<hr>
	<div class="row">
		{% for index, product in products %}
			<div class="col-md-4 col-sm-6">
				{% include 'products/partials/item.twig' with {product: product} %}
			</div>
			{% if (index+1)%3 == 0 %}
				</div>
				<div class="row">
			{% endif %}
		{% endfor %}	
	</div>
{% endblock %}